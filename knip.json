{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "entry": ["src/app/**/page.tsx", "src/app/**/layout.tsx", "src/app/api/**/route.ts"],
  "project": ["src/**/*.{ts,tsx}"],
  "ignore": [
    "postman/**",
    "diagramas/**",
    "scripts/**",
    "**/*.d.ts"
  ],
  "ignoreDependencies": [
    "@tailwindcss/postcss",
    "sharp",
    "baseline-browser-mapping"
  ],
  "ignoreExportsUsedInFile": true,
  "next": {
    "entry": ["next.config.ts"]
  }
}
