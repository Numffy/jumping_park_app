{
  "info": {
    "name": "JumpingPark - Firebase API (Local)",
    "_postman_id": "jumpingpark-collection-001",
    "description": "Colecci√≥n de pruebas para los endpoints server (Next.js App Router) creados en /api/*.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "OTP - Solicitar",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"test@jumpingpark.com\",\n  \"cedula\": \"12345678\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/otp",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "otp"
          ]
        }
      }
    },
    {
      "name": "OTP - Validar",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"test@jumpingpark.com\",\n  \"code\": \"123456\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/otp/validate",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "otp",
            "validate"
          ]
        }
      }
    }
  ]
}
